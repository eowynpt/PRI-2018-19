extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-indigo
        h2.w3-xlarge Índice de Processos do CLAV
      .w3-container
        br
        a.w3-button.w3-blue.w3-hover-light-blue(href='http://localhost:4008/') Back to Homepage
        if(infoClasse.pai)
          a.w3-button.w3-blue.w3-hover-light-blue(href='http://localhost:4008/classe/'+infoClasse.codigoPai) Classe Anterior
        br
        br
        table.w3-table-all.w3-centered
          tr
            th.w3-center Código
            if(infoClasse.tituloPai)
              th.w3-center Titulo Pai
            if(infoClasse.pt)
              th.w3-center PT
            th.w3-center Titulo
            if (infoClasse.pai)
              th.w3-center Pai
            if(infoClasse.codigoPai)
              th.w3-center Código Pai
            if(infoClasse.procTrans)
              th.w3-center Proc Trans
            th.w3-center Status
            th.w3-center Descrição
            tr
              td.w3-hover-khaki
                p= infoClasse.codigo
              if(infoClasse.tituloPai)
                td.w3-hover.khaki
                  p= infoClasse.tituloPai
              if(infoClasse.pt)
                td.w3-hover.khaki
                  p= infoClasse.pt
              td.w3-hover-khaki
                p=  infoClasse.titulo
              if(infoClasse.pai)
                td.w3-hover.khaki
                  p= infoClasse.pai
              if(infoClasse.codigoPai)
                td.w3-hover.khaki
                  p= infoClasse.codigoPai
              if(infoClasse.procTrans)
                td.w3-hover.khaki
                  p= infoClasse.procTrans
              td.w3-hover-khaki
                p=  infoClasse.status
              td.w3-hover-khaki.w3-justify
                p=  infoClasse.desc
        br
        if(descendenciaClasse.length >0)
          header.w3-container.w3-indigo
            h2.w3-large Descendência da Classe #{infoClasse.codigo}
          table.w3-table-all.w3-centered
            tr
              th.w3-center Código
              th.w3-center Titulo
              th.w3-center ID
              each d in descendenciaClasse
                tr
                  td.w3-hover-khaki
                    a(href="/classe/"+d.codigo)= d.codigo
                  td.w3-hover-khaki
                    p= d.titulo
                  td.w3-hover-khaki
                    p= d.id
        else
          header.w3-container.w3-indigo
            h2.w3-large Donos do processo #{infoClasse.codigo}
          table.w3-table-all.w3-centered
            tr
              th.w3-center ID
              th.w3-center Sigla
              th.w3-center Designação         
              each d in donosClasse
                tr
                  td.w3-hover-khaki
                    p= d.id
                  td.w3-hover-khaki
                    p= d.sigla
                  td.w3-hover-khaki
                    p= d.designacao
      br
      footer.w3-container.w3-indigo
        address generated by me
        

        //- &nbsp é um espaço vazio
        //- fazer comentários linha toda é ctrl + ~ 