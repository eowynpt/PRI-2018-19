extends layout

block content
  .w3-container
    .w3-card-4
      header.w3-container.w3-indigo
        h2.w3-xxlarge Índice de Processos do CLAV
      .w3-container
      table.w3-table-all.w3-centered
        tr
          th.w3-center Código
          th.w3-center Titulo
          th.w3-center Id
        each proc in listaDeProcessos
          tr
            td.w3-hover-khaki
              a(href="/classe/"+proc.codigo)= proc.codigo
            td.w3-hover-khaki
              p=  proc.titulo
            td.w3-hover-khaki
              a(href=proc.id)= proc.id
      footer.w3-container.w3-indigo
        address generated by me
        

